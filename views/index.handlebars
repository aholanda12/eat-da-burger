{{!-- Header --}}
<div class="container">
  <header>
<div class="row">
  <div class="col-12">
    <img class="burger" src="../assets/images/burger.png" alt="Image of a burger"/>
<h1>Eat da Burger!</h1>
</div>
</div>
</header>

{{!-- List of burgers --}}
<div class="row">
  <div class="col-6" id="pick-up">
<h2>Burger Pick up!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

  <div class="col-6" id="eaten">
<h2>Burgers that are Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
    {{name}}
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

{{!-- Burger Submission --}}
<div class="row">
  <div class="col-12">
<form class="create-form">

  <div class="form-group">
    <input type="text" id="burg" name="name" placeholder="Enter a burger name and hit the button to order!">
  </div>
  <div id="button">
  <button type="submit">Order Up!</button>
  </div>
</form>
</div>
</div>
</div>
